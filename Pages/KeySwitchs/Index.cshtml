@page "{searchString?}"
@model Keyboards.Pages.KeySwitchs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>

         <select asp-for="KeyboardType" asp-items="Model.Type">
            <option value="">All</option>
        </select>
        
        Switch: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Keyboard[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Keyboard[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Keyboard[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Keyboard[0].Pressure)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Keyboard) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pressure)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-special="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
